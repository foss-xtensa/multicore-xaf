.PHONY:

NCORES ?= 2
ROOTDIR ?= ../..

ifeq ($(NCORES), 4)
    CORE_LIST= 0 1 2 3
else ifeq ($(NCORES), 3)
    CORE_LIST= 0 1 2
else ifeq ($(NCORES), 2)
    CORE_LIST= 0 1
endif

MAKE_TEST_ARGS=XA_MP3_DECODER=0 XA_MP3_ENCODER=0 XA_MIXER=0 XA_AMR_WB_DEC=0 XA_SRC_PP_FX=0 XA_AAC_DECODER=0 XA_RENDERER=0 XA_CAPTURER=0 XA_VORBIS_DECODER=0 XA_AEC22=0 XA_AEC23=0 XA_PCM_SPLIT=0 XA_MIMO_MIX=0

all af_hostless af_hostless_test:
	@$(foreach var, $(CORE_LIST),\
	$(MAKE) -f makefile_testbench clean ROOTDIR=$(ROOTDIR) XTCORE="core$(var)" XF_CORE_ID=${var};\
	$(MAKE) -f makefile_testbench ROOTDIR=$(ROOTDIR) all XTCORE="core$(var)" XF_CORE_ID=${var} XF_CFG_CORES_NUM=$(NCORES) $(MAKE_TEST_ARGS) ;\
	)

all-dec:
	@$(foreach var, $(CORE_LIST),\
	$(MAKE) -f makefile_testbench clean ROOTDIR=$(ROOTDIR) XTCORE="core$(var)" XF_CORE_ID=${var};\
	$(MAKE) -f makefile_testbench ROOTDIR=$(ROOTDIR) $@ XTCORE="core$(var)" XF_CORE_ID=${var} XF_CFG_CORES_NUM=$(NCORES);\
	)

clean:
	@$(foreach var, $(CORE_LIST),\
	$(MAKE) -f makefile_testbench ROOTDIR=$(ROOTDIR) $@ XTCORE="core$(var)" XF_CORE_ID=${var};\
	)

run run-dec run_af_hostless:
	$(MAKE) -f makefile_testbench ROOTDIR=$(ROOTDIR) XF_CFG_CORES_NUM=$(NCORES) $@

